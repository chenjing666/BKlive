                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x30"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
