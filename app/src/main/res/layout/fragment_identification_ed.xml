<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y500">

        <ImageView
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/y400"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/y118"
            android:background="@drawable/certification_pass" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x100"
            android:background="@drawable/certification_pass2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="你已经通过了实名认证"
            android:textColor="@color/black"
            android:textSize="@dimen/x34" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y38"
        android:gravity="center"
        android:text="为了倡导健康直播，绿色直播，平台采取实名认证机制"
        android:textColor="@color/black"
        android:textSize="@dimen/x22" />
</LinearLayout>
