<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.biaoke.bklive.activity.PrivateMsgActivity">

    <ListView
        android:id="@+id/listview_priMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_add_follow_priMsg"
        android:layout_marginTop="@dimen/y100">

    </ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/background_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/x20"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/msg_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="昵称"
            android:textColor="@color/white"
            android:textSize="@dimen/x34" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/y100"
        android:id="@+id/ll_add_follow_priMsg"
        android:layout_height="@dimen/y60"
        android:layout_width="match_parent"
        android:background="@color/gray_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x40"
            android:text="关注即可不错过TA的最新动态"
            android:textColor="@color/background_color"
            android:textSize="@dimen/x28" />

        <Button
            android:id="@+id/add_follow_priMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/x5"
            android:background="@color/background_color"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="@dimen/x28" />

    </RelativeLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="#e2e2e2"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/input_editor_priMsg"
                android:layout_width="@dimen/x600"
                android:layout_height="@dimen/y80"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/x30"
                android:background="@drawable/livingroom_edittext"
                android:gravity="center"
                android:maxLines="4"
                android:textColor="#beb5dd"
                android:textSize="@dimen/x32" />

        </RelativeLayout>

        <TextView
            android:id="@+id/input_send_priMsg"
            android:layout_width="@dimen/x82"
            android:layout_height="@dimen/y70"
            android:layout_gravity="center_vertical"
            android:background="@drawable/input_send_button"
            android:gravity="center"
            android:text="@string/rc_send"
            android:textColor="#ffffff"
            android:textSize="@dimen/x28" />
    </LinearLayout>

</RelativeLayout>
