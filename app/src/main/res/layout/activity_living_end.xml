<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.biaoke.bklive.activity.LivingEndActivity">

    <ImageView
        android:id="@+id/iv_header_live_end"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y80"
        android:background="@drawable/bk_contribution_second_edge" />

    <TextView
        android:id="@+id/tv_live_end_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:text="昵称"
        android:textColor="@color/white"
        android:textSize="@dimen/x26" />

    <TextView
        android:id="@+id/tv_live_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:text="直播结束"
        android:textColor="@color/white"
        android:textSize="@dimen/x70" />

    <TextView
        android:id="@+id/tv_live_end_secret"
        android:layout_width="@dimen/x118"
        android:layout_height="@dimen/y41"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/liveend_secret_selector"
        android:gravity="center"
        android:text="私密"
        android:textColor="@color/white"
        android:textSize="@dimen/x22" />

    <TextView
        android:id="@+id/tv_live_end_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:text="时间较短的直播不保存"
        android:textColor="@color/red"
        android:textSize="@dimen/x22" />

    <TextView
        android:id="@+id/tv_livetitle_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y16"
        android:text="时间较短的直播不保存"
        android:textColor="@color/white"
        android:textSize="@dimen/x40" />

    <TextView
        android:id="@+id/tv_live_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:text="直播时间"
        android:textColor="@color/white"
        android:textSize="@dimen/x34" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_live_end_looknum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="#57bff5"
                android:textSize="@dimen/x80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text="看过"
                android:textColor="@color/white"
                android:textSize="@dimen/x22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_live_end_charm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1908"
                android:textColor="#f2ff24"
                android:textSize="@dimen/x80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text="魅力"
                android:textColor="@color/white"
                android:textSize="@dimen/x22" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享至"
        android:textColor="@color/white"
        android:textSize="@dimen/x22" />

    <LinearLayout
        android:id="@+id/ll_live_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_liveshare_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/livecamera_share_weibo"
            android:clickable="true"
            android:padding="15dp" />

        <ImageView
            android:id="@+id/iv_liveshare_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/livecamera_share_wechat"
            android:padding="15dp" />

        <ImageView
            android:id="@+id/iv_liveshare_wechatfriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/livecamera_share_wechatfriend"
            android:padding="15dp" />

        <ImageView
            android:id="@+id/iv_liveshare_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/livecamera_share_qq"
            android:padding="15dp" />

        <ImageView
            android:id="@+id/iv_liveshare_qqq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/livecamera_share_qqq"
            android:padding="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_backto_foundfragment"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/background_color"
        android:text="返回首页"
        android:textColor="@color/white"
        android:textSize="@dimen/x34" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_liveend_deletevideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/livingend_video_delete" />

        <TextView
            android:id="@+id/tv_liveend_deletevideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x30"
            android:text="删除视频"
            android:textColor="@color/white"
            android:textSize="@dimen/x26" />
    </LinearLayout>
</LinearLayout>
