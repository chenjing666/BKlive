<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/y36"
        android:layout_marginStart="@dimen/x26"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/background_color"
        android:gravity="center"
        android:text="真实姓名"
        android:textColor="@color/white"
        android:textSize="@dimen/x22" />

    <EditText
        android:id="@+id/et_putName"
        android:layout_width="@dimen/x700"
        android:layout_height="@dimen/y100"
        android:layout_gravity="end"
        android:background="@null"
        android:hint="请输入真实姓名"
        android:textColorHint="#999999" />

    <View
        android:layout_width="@dimen/x700"
        android:layout_height="@dimen/y3"
        android:layout_gravity="end"
        android:background="#e9e7f3" />

    <TextView
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/y36"
        android:layout_marginStart="@dimen/x26"
        android:layout_marginTop="@dimen/y14"
        android:background="@color/background_color"
        android:gravity="center"
        android:text="身份验证"
        android:textColor="@color/white"
        android:textSize="@dimen/x22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_certification_photo_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x26"
            android:layout_weight="1"
            android:src="@drawable/certification_addphoto" />

        <ImageView
            android:id="@+id/iv_certification_photo_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:layout_weight="1"
            android:src="@drawable/certification_addphoto" />

        <ImageView
            android:id="@+id/iv_certification_photo_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x26"
            android:layout_marginStart="@dimen/x10"
            android:layout_weight="1"
            android:src="@drawable/certification_addphoto" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x26"
            android:layout_weight="1"
            android:gravity="center"
            android:text="身份证正面照"
            android:textColor="#000000"
            android:textSize="@dimen/x22" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="身份证反面照"
            android:textColor="#000000"
            android:textSize="@dimen/x22" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x26"
            android:layout_marginStart="@dimen/x10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手持身份证正面照"
            android:textColor="#000000"
            android:textSize="@dimen/x22" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/x260"
            android:layout_height="@dimen/y36"
            android:layout_marginStart="@dimen/x26"
            android:layout_marginTop="@dimen/y20"
            android:background="@color/background_color"
            android:gravity="center"
            android:text="手持身份证正面照-示例"
            android:textColor="@color/white"
            android:textSize="@dimen/x22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y36"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x160"
            android:layout_marginStart="@dimen/x26"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="请按图示手持身份证拍照"
            android:textColor="#000000"
            android:textSize="@dimen/x22" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/StyleProgressBarMini"
        android:layout_width="@dimen/x440"
        android:layout_height="@dimen/y26"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ImageView
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/y360"
        android:layout_marginStart="@dimen/x100"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/certification_pickphoto" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30">

        <CheckBox
            android:id="@+id/cb_agree_bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x160" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x210"
            android:text="我已阅读并同意"
            android:textSize="@dimen/x22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x180"
            android:text="《骠客用户协议》"
            android:textColor="#ff0000"
            android:textSize="@dimen/x22" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_put_identification"
        android:layout_width="@dimen/x589"
        android:layout_height="@dimen/y100"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/buttonstyle"
        android:text="提交"
        android:textColor="@color/background_color" />

</LinearLayout>