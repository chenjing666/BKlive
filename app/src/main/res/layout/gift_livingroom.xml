<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y488"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_gift"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y368">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/ll_page_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x10"
            android:paddingStart="@dimen/x10">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x50"
                android:text="充值:"
                android:textColor="@color/white"
                android:textSize="@dimen/x22" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x18"
                android:src="@drawable/liwu_zuanshi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x18"
                android:text="3000"
                android:textColor="@color/white"
                android:textSize="@dimen/x22" />

            <ImageView
                android:id="@+id/diamong_recharge_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x18"
                android:src="@drawable/liwu_1" />

            <Button
                android:id="@+id/gift_send"
                android:layout_width="@dimen/x164"
                android:layout_height="@dimen/y60"
                android:layout_marginStart="@dimen/x200"
                android:background="@drawable/gift_send"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="@dimen/x28" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
