<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.biaoke.bklive.user.activity.ContributionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y510"
        android:background="@drawable/bg_bk_contribution"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/y60"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/x15"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="骠客贡献榜"
                android:textColor="@color/white"
                android:textSize="@dimen/x34" />


            <TextView
                android:id="@+id/tv_contribution_charm"
                android:layout_width="@dimen/x230"
                android:layout_height="@dimen/y55"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bk_contribution_charm"
                android:gravity="center"
                android:text="12900魅力值"
                android:textColor="@color/white"
                android:textSize="@dimen/x22" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/hotstyle"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_list_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x40"
                    android:layout_marginStart="@dimen/x40"
                    android:text="日榜"
                    android:textColor="@drawable/colortextview2"
                    android:textSize="@dimen/x34" />


                <TextView
                    android:id="@+id/tv_list_totall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x40"
                    android:text="总榜"
                    android:textColor="@drawable/colortextview2"
                    android:textSize="@dimen/x34" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y150"
                android:background="@drawable/bk_contribution_first_edge" />

            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y90"
                android:background="@drawable/bk_contribution_first" />

            <TextView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y40"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y143"
                android:background="@drawable/bk_contribution_leveltwo"
                android:gravity="center"
                android:text="81"
                android:textColor="@color/white"
                android:textSize="@dimen/x16" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_contribution_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="豌豆公主"
                android:textColor="@color/white"
                android:textSize="@dimen/x30" />

            <ImageView
                android:id="@+id/iv_contribution_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x12"
                android:background="@drawable/man" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贡献"
                android:textColor="@color/white"
                android:textSize="@dimen/x22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x10"
                android:layout_marginStart="@dimen/x10"
                android:text="12000"
                android:textColor="#ffd200"
                android:textSize="@dimen/x22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="魅力值"
                android:textColor="@color/white"
                android:textSize="@dimen/x22" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y136"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:layout_marginStart="@dimen/x20"
                android:background="@drawable/bk_contribution_second" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x20">

                <ImageView
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/y120"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bk_contribution_second_edge" />

                <TextView
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y40"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y105"
                    android:background="@drawable/bk_contribution_level"
                    android:gravity="center"
                    android:text="81"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x16" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/contribution_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="豌豆公主"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x30" />

                    <ImageView
                        android:id="@+id/contribution_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x12"
                        android:background="@drawable/man" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y16"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="贡献"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x22" />

                    <TextView
                        android:id="@+id/contribution_charm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x10"
                        android:layout_marginStart="@dimen/x10"
                        android:text="12000"
                        android:textColor="#ffd200"
                        android:textSize="@dimen/x22" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="魅力值"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x22" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/x540"
            android:layout_height="@dimen/y3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/gray" />
    </RelativeLayout>
</LinearLayout>
