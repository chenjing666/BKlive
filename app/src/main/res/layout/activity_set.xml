<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e7f3"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.biaoke.bklive.user.activity.SetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/background_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/x20"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/x34" />
    </RelativeLayout>

    <TextView
        android:id="@+id/set_phone_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:background="@color/white"
        android:drawableEnd="@drawable/item_more"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="绑定手机"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

    <TextView
        android:id="@+id/set_password_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/white"
        android:drawableEnd="@drawable/item_more"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="密码修改"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y16">
    <TextView
        android:id="@+id/set_accept_primsg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="接受未关注人私信"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

        <ImageView
            android:id="@+id/set_chatbarrage_primsg"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y66"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x28"
            android:background="@drawable/barrage_selector" />

        <ImageView
            android:id="@+id/set_barrage_primsg_close"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y56"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x28"
            android:background="@drawable/livingroom_chatbarrage_switch" />

        <ImageView
            android:id="@+id/set_barrage_primsg_open"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y56"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x62"
            android:background="@drawable/livingroom_chatbarrage_switch"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/set_live_remind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/white"
        android:drawableEnd="@drawable/item_more"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="开播提醒"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

    <TextView
        android:id="@+id/set_defriend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/white"
        android:drawableEnd="@drawable/item_more"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="黑名单"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y16">
    <TextView
        android:id="@+id/set_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="wifi自动缓存视频"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

        <ImageView
            android:id="@+id/set_chatbarrage_cache"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y66"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x28"
            android:background="@drawable/barrage_selector" />

        <ImageView
            android:id="@+id/set_barrage_cache_close"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y56"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x28"
            android:background="@drawable/livingroom_chatbarrage_switch" />

        <ImageView
            android:id="@+id/set_barrage_cache_open"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y56"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x62"
            android:background="@drawable/livingroom_chatbarrage_switch"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y4">
    <TextView
        android:id="@+id/set_autoplay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="wifi自动播放"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

        <ImageView
            android:id="@+id/set_chatbarrage_autoplay"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y66"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x28"
            android:background="@drawable/barrage_selector" />

        <ImageView
            android:id="@+id/set_barrage_autoplay_close"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y56"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x28"
            android:background="@drawable/livingroom_chatbarrage_switch" />

        <ImageView
            android:id="@+id/set_barrage_autoplay_open"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y56"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x62"
            android:background="@drawable/livingroom_chatbarrage_switch"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/white"
        android:drawableEnd="@drawable/item_more"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="清空缓存"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:layout_marginTop="@dimen/y16"
        android:background="@color/white"
        android:drawableEnd="@drawable/item_more"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="帮助与反馈"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

    <TextView
        android:id="@+id/set_about_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/white"
        android:drawableEnd="@drawable/item_more"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="关于我们"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/white"
        android:drawableEnd="@drawable/item_more"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x38"
        android:paddingStart="@dimen/x38"
        android:text="版本更新"
        android:textColor="#222222"
        android:textSize="@dimen/x34" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_loginout"
            android:layout_width="@dimen/x600"
            android:layout_height="@dimen/y100"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_start_live"
            android:text="退出登录"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>
